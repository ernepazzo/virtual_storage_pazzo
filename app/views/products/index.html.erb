<%= turbo_frame_tag 'home' do %>
  <div class="grid text-center">
    <h2><%= t('.title') %></h2>
    <%= link_to t('.new'), new_product_path, class: "btn btn-success w-25-sm m-1" if Current.user %>

    <%= form_with url: products_path, method: :get do |form| %>
      <%= form.text_field :query_text, placeholder: t('.query_text'), onChange: 'this.form.requestSubmit()', value: params[:query_text], class: 'form-control my-2 rounded' %>
      
      <div class="d-flex">
        <%= form.number_field :min_price, placeholder: t('.min_price'), onChange: 'this.form.requestSubmit()', value: params[:min_price], class: 'form-control w-1/3 rounded' %>
        <%= form.number_field :max_price, placeholder: t('.max_price'), onChange: 'this.form.requestSubmit()', value: params[:max_price], class: 'form-control w-1/3 rounded' %>

        <%= form.select :order_by, options_for_select(Product::ORDER_BY.keys.map { |order| [t(".#{order}"), order] }, params[:order_by]), {}, { onChange: 'this.form.requestSubmit()', class: 'form-control text-secondary w-1/3 rounded' } %>
      </div>
    <% end %>

    <div class="d-flex overflow-auto gap-2 my-2">
      <%= render(CategoryComponent.new) %>
      
      <%= render(CategoryComponent.with_collection(@categories)) %>
    </div>
  </div>

  <%= turbo_frame_tag :products do %>
    <%= turbo_frame_tag "products-#{@pagy.page}", class: "products" do %>
      <div style="width: 100%; display: flex; flex-direction: row; flex-wrap: wrap; justify-content: center;">
        <%= render partial: 'product', collection: @products %>
        
        <div style="width: 100%; display: flex; flex-direction: row; flex-wrap: wrap; justify-content: center;">
          <%= turbo_frame_tag "products-#{@pagy.next}", class: "products", src: pagy_url_for(@pagy, @pagy.next), loading: :lazy if @pagy.next  %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>