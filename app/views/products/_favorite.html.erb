<div id="favorite" >
  <% if product.favorite %>
    <%= link_to '💔', favorite_path(product.id), data: {
      turbo_method: :delete
    }, class: "text-decoration-none" %>
  <% else %>
    <%= link_to '❤️', favorites_path(product_id: product.id), data: {
      turbo_method: :post
    }, class: "text-decoration-none" %>
  <% end %>
</div>