<%= form_with(model: permission, url: url, method: url_method) do |f| %>
  <input type="hidden" id="role_h" name="role_h" value="new">
  <% if permission.errors.any? %>
    <div class="error_explanation alert_error">
      <div class="icon_error_explanation">
        <i class="icon-shield"></i>
      </div>
      <div class="data_error_explanation">
        <h1 class="d-flex justify-content-center"><i class="bi bi-exclamation-octagon text-danger"></i></h1>
        <h4><%= pluralize(permission.errors.count, "errores") %> prohíben que se salve la información:</h4>

        <ul>
          <% permission.errors.each do |error| %>
            <li class="text-danger"><%= error.message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xl-12">
      <div class="form-group">
        <label class="small mb-1" for="text">Nombre:</label>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label class="small mb-1" for="text">Tipo:</label>
        <%= f.text_field :permission_type, class: 'form-control' %>
      </div>

      <div class="form-group mt-3 d-flex justify-content-end" style="gap: .5em;">
        <%= link_to admin_permissions_path, class: 'btn btn-secondary mb-3' do %>
          <span class="icon-arrow-left"></span> Atrás
        <% end %>
        <!-- Save changes button-->
        <button class="btn btn-success mb-3" name="commit" type="submit"><span class="icon-check  "></span> Guardar
        </button>
      </div>
    </div>
  </div>
<% end %>
