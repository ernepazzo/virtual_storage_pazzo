<%# binding.pry %>
<%= form_with(model: user, url: url, method: url_method) do |f| %>
  <input type="hidden" id="user_hidden" name="user_hidden" value="new">
  <% if user.errors.any? %>
    <div class="error_explanation alert_error">
      <div class="icon_error_explanation">
        <i class="icon-shield"></i>
      </div>
      <div class="data_error_explanation">
        <h1 class="d-flex justify-content-center"><i class="bi bi-exclamation-octagon text-danger"></i></h1>
        <h4><%= pluralize(user.errors.count, "errores") %> prohíben que se salve la información:</h4>

        <ul>
          <% user.errors.each do |error| %>
            <li class="text-danger"><%= error.message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-12 col-md-12">
      <%= render "partials/image/image_preview", f: f, my_model: user %>
    </div>
  </div>

  <div class="row">
    <div class="col-xl-12">
      <div class="form-group">
        <label class="small mb-1" for="text">Correo electrónico:</label>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
      <div class="form-group mt-1">
        <label class="small mb-1" for="text">Whatsapp:</label>
        <%= f.text_field :whatsapp, class: 'form-control' %>
      </div>

      <div class="mb-3" data-controller="select2">
        <%= f.label :role_id, class: 'small mb-1' do %>Role
        <% end %>
        <%= f.select :role_id, Role.where('priority >= ?', current_user&.role&.priority || 1).collect { |t| [t.role_type, t.id] }, { prompt: "Seleccione una opción" }, class: "form-control c2ec_select_with_clear" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', required: true %>
        <small class="form-text text-muted">
          Mínimo <%= @user.class.password_length.min %> caracteres
        </small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
      </div>

      <div class="modal-footer mt-3">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Atrás</button>
        <!-- Save changes button-->
        <button class="btn btn-success" name="commit" type="submit"><span class="icon-check  "></span> Guardar
        </button>
      </div>
    </div>
  </div>
<% end %>
