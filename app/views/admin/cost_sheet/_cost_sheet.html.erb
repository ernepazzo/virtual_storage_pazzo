<div id="<%= dom_id cost_sheet %>" class="card mb-4 border rounded shadow-sm" style="max-width: 100%;">
  <div class="card-body">
    <!-- Producto -->
    <div class="row mb-3">
      <div class="col-12">
        <h5 class="card-title fw-bold">
          <span class="badge bg-primary me-2"><%= cost_sheet.source.name %></span>
          <%= cost_sheet.product_item.name %>
        </h5>
      </div>
      <div class="col-12 d-flex justify-content-center align-items-center mt-3">
        <% if cost_sheet.product_item.image.present? %>
          <%= image_tag cost_sheet.product_item.image, class: "image-upload" %>
        <% else %>
          <img data-image-preview-target="preview" class="image-upload" src="/unknown.webp" alt="unknown">
        <% end %>
      </div>
    </div>

    <!-- Ubicación -->
    <!--    <p class="text-secondary mb-3 text-end">-->
    <!--      <i class="bi bi-geo-alt"></i>-->
    <%#= cost_sheet.source.name %>
    <!--    </p>-->

    <!-- Cantidades y unidades -->
    <div class="row mb-3">
      <div class="col-6">
        <small class="text-muted">Cantidad / Unidad de Medida (Almacén)</small>
        <div class="fw-bold">
          <%= cost_sheet.storage_amount || 0 %>
          <%= cost_sheet.storage_unit&.name || '—' %>
        </div>
      </div>
      <div class="col-6">
        <small class="text-muted">Cantidad / Unidad de Medida (Venta)</small>
        <div class="fw-bold">
          <%= cost_sheet.sale_amount || 0 %>
          <%= cost_sheet.sale_unit&.name || '—' %>
        </div>
      </div>
    </div>

    <!-- Precios -->
    <div class="row mb-3">
      <div class="col-6">
        <small class="text-muted">Precio de Costo</small>
        <div class="fw-bold text-danger">
          <%= humanized_money_with_symbol(Money.new(cost_sheet.cost_price_cents, cost_sheet.cost_price_currency)) %>
        </div>
      </div>
      <div class="col-6">
        <small class="text-muted">Precio de Venta</small>
        <div class="fw-bold text-success">
          <%= humanized_money_with_symbol(Money.new(cost_sheet.sale_price_cents, cost_sheet.sale_price_currency)) %>
        </div>
      </div>
    </div>

    <!-- Fecha de entrada -->
    <% if cost_sheet.entry_date.present? %>
      <small class="text-muted d-block mt-2">
        <i class="bi bi-calendar"></i>
        Entrada: <%= cost_sheet.entry_date %>
      </small>
    <% end %>
  </div>
</div>
