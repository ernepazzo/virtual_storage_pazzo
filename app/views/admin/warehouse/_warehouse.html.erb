<div id="<%= dom_id warehouse %>">
  <div class="row">
    <div class="col-12 col-md-12 d-flex justify-content-center align-items-center">
      <% if warehouse.image.present? %>
        <%= image_tag warehouse.image, class: "image-upload" %>
      <% else %>
        <img data-image-preview-target="preview" class="image-upload" src="/unknown.webp" alt="unknown">
      <% end %>
    </div>
  </div>
  <hr>

  <div class="row">
    <div class="col-12 col-md-12 d-flex justify-content-center">
      <h4>Datos Generales</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p>Empresa o Negocio: <b><%= @warehouse.entity_business.name %></b></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-12">
      <p>Nombre: <b><%= warehouse.name %></b></p>
    </div>
    <div class="col-md-6 col-12">
      <p>Código: <b><%= warehouse.code %></b></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 col-12">
      <p>Descripción: <b><%= warehouse.description %></b></p>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12 col-md-12 d-flex justify-content-center">
      <h4>Productos disponibles</h4>
    </div>
  </div>
  <% if warehouse.cost_sheets.any? %>
    <!--    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">-->
    <div class="row">
      <% warehouse.cost_sheets.each do |cost_sheet| %>
        <div class="col-12 col-md-6 col-xl-4">
          <%= render 'admin/cost_sheet/cost_sheet', cost_sheet: cost_sheet %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      No hay productos registrados en este almacén.
    </div>
  <% end %>
</div>
