<div class="card m-2 p-2">
  <%= form_with(model: @user) do |form| %>
    <% @user.errors.full_messages.each do |error| %>
      <div>
        <%= error %>
      </div>
    <% end %>

    <div>
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, required: true, class: "form-control" %>
    </div>

    <div>
      <%= form.label :username, class: "form-label" %>
      <%= form.text_field :username, required: true, class: "form-control" %>
    </div>

    <div>
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, required: true, class: "form-control" %>
    </div>

    <div>
      <%= form.label :whatsapp, class: "form-label" %>
      <%= form.text_field :whatsapp, required: true, class: "form-control" %>
    </div>

    <div class="btn-group p-2 m-2">
      <%= form.submit :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
